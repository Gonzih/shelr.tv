- content_for :title do
  = 'ShellCast: "' + @record.title + '" < '

= player_for(@record)

%p.desc
  %strong Title:
  = @record.title
%p.desc
  %strong Ninja:
  = link_to @record.user.nickname, @record.user

- unless @record.tags.blank?
  %p.tags
    %strong Tags:
    - @record.tags.split(",").map(&:strip).each do |tag|
      = link_to tag, records_path(:tags => [tag])

.desc
  = @record.description_html


%hr
= render :partial => 'shared/disqus', :locals => { disqus_url: record_path(@record, :only_path => false), disqus_id: @record.id.to_s, disqus_title: @record.title }
