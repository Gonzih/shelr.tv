- show_user ||= true
%li.record
  = link_to(image_tag(record.user.avatar_url(100)), record.user, :class => 'avatar') if show_user
  %h3.title
    = link_to record.title, record
  .desc
    = record.description_html
  - if record.user
    .desc
      %strong Ninja:
      = link_to record.user.nickname, record.user
  - unless record.tags.blank?
    %p.tags
      %strong Tags:
      - record.tags.split(",").map(&:strip).each do |tag|
        = link_to tag, records_path(:tags => [tag])
