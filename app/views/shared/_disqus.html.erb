<div id="disqus_thread"></div>
<script type="text/javascript">
    var disqus_shortname = 'shellninjas'; // required: replace example with your forum shortname
    var disqus_identifier = '<%= disqus_id %>';
    var disqus_url = '<%= disqus_url %>';
    var disqus_developer = <%= Rails.env.development? ? 1 : 0 %>;
    var disqus_title = '<%= disqus_title %>';
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
