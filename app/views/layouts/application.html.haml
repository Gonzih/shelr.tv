!!! 5
%html
  %head
    %title Shelltube
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
%body
  %menu
    - if logged_in?
      = current_user.id
      = button_to 'logout', logout_url
    - else
      = button_to 'Login With Twitter', '/auth/twitter'
  %section
    = yield
